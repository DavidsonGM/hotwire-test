<%= form_with url: user_tasks_path, method: :post, local: true, class: "w-full max-w-lg" do |form| %>
  <div class="block w-full mb-2">
    <%= form.label :name, class: "text-gray-700" do %>
      Nome da tarefa
    <% end %>
    <%= form.text_field :name, class: "text-black-700 form-input mt-1 block w-full", id: "task-name" %>
  </div>
  <%= form.button "Criar tarefa", class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
<% end %>
