<%= turbo_frame_tag "todo_#{task.id}" do %>
  <li class="py-4 border-b border-gray-300 flex justify-between overflow-auto">
    <h3 class="text-xl font-bold text-white mb-2"><%= task.name %></h3>
    <%= button_to "Remover",
                  user_task_path(task.id),
                  method: :delete,
                  class: "border-2 bg-white"
    %>
  </li>
<% end %>
